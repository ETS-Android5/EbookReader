<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.longluo.ebookreader.widget.RefreshLayout
        android:id="@+id/book_sort_rl_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true">

        <com.longluo.ebookreader.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <TextView
                    style="@style/NB.Theme.TextAppearance.Billboard.Title"
                    android:text="男生" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_sort_rv_boy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/NB.Theme.TextAppearance.Billboard.Title"
                    android:text="女生" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_sort_rv_girl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.longluo.ebookreader.widget.ReboundScrollView>
    </com.longluo.ebookreader.widget.RefreshLayout>
</LinearLayout>