<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.longluo.ebookreader.widget.RefreshLayout
        android:id="@+id/billboard_rl_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/NB.Theme.TextAppearance.Billboard.Title"
                    android:text="男生" />

                <com.longluo.ebookreader.widget.CustomExpandableListView
                    android:id="@+id/billboard_elv_boy"
                    style="@style/NB.Theme.Widget.DefaultExpandListView" />

                <TextView
                    style="@style/NB.Theme.TextAppearance.Billboard.Title"
                    android:text="女生" />

                <com.longluo.ebookreader.widget.CustomExpandableListView
                    android:id="@+id/billboard_elv_girl"
                    style="@style/NB.Theme.Widget.DefaultExpandListView" />
            </LinearLayout>
        </ScrollView>
    </com.longluo.ebookreader.widget.RefreshLayout>
</LinearLayout>
