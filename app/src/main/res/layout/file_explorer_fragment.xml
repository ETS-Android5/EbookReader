<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:leftIcon="@null"
        app:title="@string/home_nav_found" />

    <!--文件点击按钮-->
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <CheckBox
            android:id="@+id/file_system_cb_selected_all"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/select_all"
            android:textColor="@color/tv_text_default" />

        <TextView
            android:id="@+id/file_system_btn_add_book"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:minWidth="110dp"
            android:text="加入书架" />

        <TextView
            android:id="@+id/file_system_btn_delete"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/file_system_btn_add_book"
            android:gravity="center"
            android:text="删除" />
    </RelativeLayout>

    <com.longluo.ebookreader.widget.refresh.RefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/local_book_rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.longluo.ebookreader.widget.refresh.RefreshLayout>

    <View
        android:id="@+id/v_shadow"
        style="@style/Style.Shadow.Bottom"
        android:layout_above="@+id/rl_bottom" />
</RelativeLayout>