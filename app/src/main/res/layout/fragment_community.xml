<?xml version="1.0" encoding="utf-8"?>
<com.longluo.ebookreader.widget.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="Comm Fragment"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/community_rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.longluo.ebookreader.widget.ReboundScrollView>

